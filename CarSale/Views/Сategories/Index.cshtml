@model List<Category>

@{
    ViewBag.Title = "Список категорий";
    Layout = "_Layout";
}


<div class="text-center">
    <h2>@ViewBag.Title</h2>
</div>

<div class="table_section">
    <a asp-action="Add" class="my-3 btn btn-outline-info">Добавить категорию</a>

    @if (Model.Count == 0)
    {
        <p>Список категорий пуст</p>
    }
    else
    {
        <div class="table-container">
            <table class="table">
                <tr>
                    <th>№</th>
                    <th>Название Категорий</th>
                    <th>Редактирование</th>
                    <th>Удаление</th>
                </tr>
                @{
                    int i = 0;
                    foreach (var category in @Model)
                    {
                        <tr>
                            <td>@(i += 1)</td>
                            <td>@category.CategoryName</td>
                            <td><a asp-action="Edit" asp-route-id="@category.Id" class="btn btn-primary">Редактировать</a></td>
                            <td><a asp-action="Delete" asp-route-id="@category.Id" class="btn btn-danger">Удалить</a></td>
                        </tr>
                    }
                }
            </table>
        </div>
    }
</div>