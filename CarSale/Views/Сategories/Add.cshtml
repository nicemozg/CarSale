@model Category

@{
    ViewBag.Title = "Добавить категорию";
    Layout = "_Layout";
}

<h2 class="text-center">@ViewBag.Title</h2>
@if (ViewBag.ErrorExist != null)
{
    <h4 class="text-danger text-center">@ViewBag.ErrorExist</h4>
}
<div class="row justify-content-center">

    <div class="phone_add_form col-md-6">
        <form asp-action="Add" method="post">

            <div class="form-group mb-3">
                
                @await Html.PartialAsync("PartialViews/CategoryFormPartial", Model)

            </div>
            <div class="text-center">
                <button type="submit" class="btn btn-outline-info mt-3">Создать</button>
            </div>
        </form>
        @section Scripts
        
                {
        
                    @{
                        await Html.RenderPartialAsync("_ValidationScriptsPartial");
        
                    }
        
                }
    </div>

</div>