@model List<ColorAuto>

@{
    ViewBag.Title = "Цвета";
    Layout = "_Layout";
}

<div class="text-center">
    <h2>@ViewBag.Title</h2>
</div>

<div class="table_section">
    <a asp-action="Add" class="my-3 btn btn-outline-info">Добавить цвет</a>

    @if (Model.Count == 0)
    {
        <p>Список цвеов пуст</p>
    }
    else
    {
        
        <table class="table mx-auto text-center">
            <thead>
            <tr>
                <th>№</th>
                <th>Название цвета</th>
                <th>Редактирование</th>
                <th>Удаление</th>
            </tr>
            </thead>
            <tbody>
            @{
                int i = 0;
                foreach (var color in Model)
                {
                    <tr>
                        <td>@(i += 1)</td>
                        <td>@color.ColorName</td>
                        <td><a asp-action="Edit" asp-route-id="@color.Id" class="btn btn-primary">Редактироввть</a></td>
                        <td><a asp-action="Delete" asp-route-id="@color.Id" class="btn btn-danger">Удалить</a></td>
                    </tr>
                }
            }
            </tbody>
        </table>
    }
</div>