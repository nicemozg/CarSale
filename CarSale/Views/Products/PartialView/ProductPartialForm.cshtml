@model Product

<div class="form-group mb-3">
    <select asp-for="BrandId" asp-items="@ViewBag.Brands">
        <option>Выберите брэнд</option>
    </select>
    
    <select asp-for="ModelAutoId" asp-items="@ViewBag.Models">
        <option>Выберите модель</option>
    </select>
    
    <select asp-for="CategoryId" asp-items="@ViewBag.Categories">
        <option>Выберите категорию</option>
    </select>
    
    <select asp-for="TypeAutoId" asp-items="@ViewBag.TypesAuto">
        <option>Выберите тип кузова</option>
    </select>
    
    <select asp-for="TypeMotorId" asp-items="@ViewBag.TypesMotor">
        <option>Выберите тип двигателя</option>
    </select>
    
    <select asp-for="ColorAutoId" asp-items="@ViewBag.Colors">
        <option>Выберите цвет</option>
    </select>
    
    <input asp-for="BrandId" type="hidden" />
    <div class="text-center">
        <span asp-validation-for="BrandId" class="text-danger"></span>
    </div>
    
    <input asp-for="CategoryId" type="hidden" />
    <div class="text-center">
        <span asp-validation-for="CategoryId" class="text-danger"></span>
    </div>
    
    <label for="description" class="mb-2">Описание товара</label>
    <textarea asp-for="Description" class="form-control" id="description" placeholder="Введите описание авто"></textarea>
    
   <div class="d-flex mt-2">
       <select asp-for="SteeringWheel" class="form-control ml-2">
           <option value="left">Руль слева</option>
           <option value="right">Руль справа</option>
       </select>
   </div>
    <span asp-validation-for="SteeringWheel" class="text-danger"></span>
    
     <div class="d-flex mt-2">
           <select asp-for="Transmission" class="form-control ml-2">
               <option value="auto">Коробка АКПП</option>
               <option value="robot">Коробка Робот</option>
               <option value="mechanical">Коробка МКПП</option>
               
           </select>
       </div>
    <span asp-validation-for="Transmission" class="text-danger"></span>
    
    <label for="volume" class="mb-2">Объем двигателя</label>
            <input asp-for="Volume" type="text" class="form-control" id="volume" placeholder="Введите объем авто">
    <span asp-validation-for="Volume" class="text-danger"></span>
    
    <label for="years" class="mb-2">Год выпуска</label>
        <input asp-for="Years" type="text" class="form-control" id="years" placeholder="Введите год авто">
    <span asp-validation-for="Years" class="text-danger"></span>
    
    <label for="price" class="mb-2">Цена автомобиля</label>
    <input asp-for="Price" type="text" class="form-control" id="price" placeholder="Введите цену авто">
    <span asp-validation-for="Price" class="text-danger"></span>

    <label for="InfoFile" class="mb-2 mt-2">Изображение для загаловка</label>
    <input asp-for="InfoFile" type="file" class="form-control-file" id="InfoFile">
    
    <label for="AvatarFile" class="mb-2 mt-2">Основное изображение</label>
        <input asp-for="AvatarFile" type="file" class="form-control-file" id="AvatarFile">
    
    <label for="PhotoFiles" class="mb-2 mt-2">Детальное изображения</label>
   <input asp-for="PhotoFiles" type="file" class="form-control-file" id="PhotoFiles" multiple>
    <span asp-validation-for="PhotoFiles" class="text-danger"></span>
</div>
