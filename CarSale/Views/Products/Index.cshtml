@model List<Product>

@{
    ViewBag.Title = "Список товаров";
    Layout = "_Layout";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="text-center">
                <h2>@ViewBag.Title</h2>
            </div>
            
            <a asp-action="Add" class="my-3 btn btn-outline-info">Добавить товар</a>
            
            <form asp-controller="Products" asp-action="Index" method="post" class="form-inline justify-content-center">
                
                <div class="form-group mr-2">
                    <label for="brand" class="mr-2">Бренд:</label>
                    <select id="brand" name="brand" class="form-control">
                        <option value="">Все бренды</option>
                        @foreach (var brand in ViewBag.Brands)
                        {
                            <option value="@brand.Id">@brand.BrandName</option>
                        }
                    </select>
                </div>
                
                <div class="form-group mr-2">
                    <label for="category" class="mr-2">Категория:</label>
                    <select id="category" name="category" class="form-control">
                        <option value="">Все категории</option>
                        @foreach (var category in ViewBag.Categories)
                        {
                            <option value="@category.Id">@category.CategoryName</option>
                        }
                    </select>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary m-3">Применить фильтр</button>
                </div>
            </form>
        </div>
    </div>

    @if (!string.IsNullOrEmpty(ViewBag.FilterMessage))
    {
        <div class="text-center">
            <p>@ViewBag.FilterMessage</p>
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var product in Model)
            {
                <div class="col-md-4">
                    <div class="card mb-4">
                        <img src="/uploads/@product.AvatarFileName" class="card-img-top img-fluid" alt="Изображение товара">
                        <div class="card-body text-center">
                            <h6 class="card-title">@product.Brand.BrandName</h6>
                            <h5 class="card-title">@product.Name</h5>
                            <p class="card-text">
                                <em>
                                    <strong>Цена:</strong>
                                </em> @((product.Price).ToString("C0").Replace(",", " "))
                            </p>
                            <p class="card-text">
                                <em>
                                    <strong>Дата добавления:</strong>
                                </em> @product.Creation
                            </p>
                            <a asp-action="Details" asp-route-id="@product.Id" class="btn btn-primary btn-sm">Детально</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>