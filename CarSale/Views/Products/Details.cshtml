@model Product

@{
    ViewBag.Title = "Details";
    Layout = "_Layout";
}


<div class="container">
    <h2 class="mt-3">@Model.Name</h2>
    <div class="text-center">
        <img src="/uploads/@Model.AvatarFileName" class="img-fluid catAva" alt="картинка товара">
    </div>
    <table class="table table-bordered mt-3">
        <tr>
            <th>Название</th>
            <td>@Model.Name</td>
        </tr>
        
        <tr>
            @if (!string.IsNullOrEmpty(Model.Description))
            {
                <th>Описание</th>
                <td>@Model.Description</td>
            }
            else
            {
                <th style="display: none;"></th>
                <td style="display: none;"></td>
            }
        </tr>
        
        <tr>
            <th>Категория</th>
            <td>@Model.Category.CategoryName</td>
        </tr>
        <tr>
            <th>Брэнд</th>
            <td>@Model.Brand.BrandName</td>
        </tr>
        <tr>
            <th>Цена</th>
            <td>@Model.Price тенге</td>
        </tr>
        <tr>
            <th>Дата создания</th>
            <td>@Model.Creation</td>
        </tr>
        <tr>
            
            @if (Model.Update != null && Model.Update != DateTime.MinValue)
            {
                <th>Дата обновления</th>
                <td>@Model.Update</td>
            }
            else
            {
                <th style="display: none;"></th>
                <td style="display: none;"></td>
            }
        </tr>
        
        <tr>
            <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger btn-sm m-2">Удалить</a>
        </tr>
        <tr>
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-success btn-sm m-2">Редактировать</a>
        </tr>
    </table>
</div>
